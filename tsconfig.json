{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@constants": ["common/constants"],
      "@decorators": ["common/decorators"],
      "@dtos": ["common/dto"],
      "@enums": ["common/enums"],
      "@filters": ["common/filters"],
      "@guards": ["common/guards"],
      "@interceptors": ["common/interceptors"],
      "@upload": ["common/upload"],
      "@utils": ["common/utils"],
      "@youtube": ["common/youtube"],
      "@core": ["core"],
      "@auth": ["auth"],
      "@genre": ["genre"],
      "@movies": ["movies"],
      "@users": ["users"],
      "@db-seed": ["database"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
